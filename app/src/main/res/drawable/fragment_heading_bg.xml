<!-- fragment_heading_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1C1C1C"
            android:endColor="#333333"
            android:angle="90" /> <!-- Gradient angle (vertical) -->
        </shape>
    </item>

    <!-- Bottom shadow -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00000000"
                android:endColor="#33000000"
                android:angle="90" /> <!-- Shadow angle (vertical) -->
        </shape>
    </item>
</layer-list>
