<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"

    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#A6A1A1"
        android:weightSum="2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">



        <LinearLayout

            android:id="@+id/main_layout"

            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fragment_heading_bg"
            android:orientation="vertical"
            >



            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:id="@+id/card_name"
                android:layout_width="248dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Card Name"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/card_num"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="3424  4378  3633  2690"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="68dp" />

            <TextView
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:visibility="gone"
                android:textSize="15dp"
                android:id="@+id/cvvcode"
                android:textColor="@color/white"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="145dp" />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="99dp"
                    android:layout_height="26dp"
                    android:id="@+id/user_name"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="User_name" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="VALID THRU"
                    android:textSize="20dp"
                    android:textAlignment="viewEnd"
                    android:id="@+id/valid"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    tools:layout_editor_absoluteX="7dp"
                    tools:layout_editor_absoluteY="145dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight=".5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="49dp"
                android:layout_height="65dp"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/edittext"
                android:id="@+id/edit"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/dot"



                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:layout_height="30dp"
                android:src="@drawable/editimage" />
            <ImageView
                android:layout_width="49dp"
                android:layout_height="65dp"

                android:visibility="gone"
                android:id="@+id/download"

                android:padding="15dp"


                android:layout_marginBottom="15dp"
                android:src="@drawable/download" />


            <ImageView
                android:layout_width="25dp"
                android:id="@+id/eye"
                android:layout_height="22dp"
                android:src="@drawable/eye"
                android:visibility="gone"

                android:layout_marginTop="15dp"
                />
            <ImageView
                android:layout_width="49dp"
                android:layout_height="65dp"
                android:id="@+id/delete"

                android:padding="15dp"

                android:layout_marginBottom="15dp"
                android:src="@drawable/delete"

                />


            <Spinner
                android:id="@+id/imageSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

